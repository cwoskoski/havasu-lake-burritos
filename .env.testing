APP_NAME="Havasu Lake Burritos (Testing)"
APP_ENV=testing
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Phoenix

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=4

LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=emergency

# Use SQLite in-memory for fast testing
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# For integration tests that need MySQL
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=havasu_testing
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=array
CACHE_PREFIX=test

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=array
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="test@havasu-burritos.test"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Burrito business logic settings
WEEKEND_PRODUCTION_ENABLED=true
MAX_DAILY_BURRITOS=100
BURRITO_PRICE=1200
TORTILLA_SIZE=14

# Performance testing thresholds
MAX_RESPONSE_TIME_MS=200
MAX_MOBILE_RESPONSE_TIME_MS=300
MAX_DATABASE_QUERIES=10
MAX_MEMORY_USAGE_MB=5

# Browser testing settings
DUSK_DRIVER_URL=http://localhost:9515
APP_URL_DUSK=http://localhost:8000

# Feature flags for testing
FEATURE_REAL_TIME_COUNTDOWN=true
FEATURE_INGREDIENT_AVAILABILITY=true
FEATURE_MOBILE_OPTIMIZATION=true
FEATURE_OFFLINE_SUPPORT=false

# Testing data
TEST_USER_EMAIL=test@havasu-burritos.test
TEST_USER_PASSWORD=password123