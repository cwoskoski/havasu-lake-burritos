{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "lighthouse": "lighthouse http://localhost:8000 --output=html --output-path=./build/lighthouse-report.html",
        "lighthouse:mobile": "lighthouse http://localhost:8000 --preset=perf --form-factor=mobile --output=html --output-path=./build/lighthouse-mobile-report.html"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/dom": "^9.3.3",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/user-event": "^14.5.1",
        "@vitest/coverage-v8": "^1.0.0",
        "@vitest/ui": "^1.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "happy-dom": "^12.10.3",
        "laravel-vite-plugin": "^1.3.0",
        "lighthouse": "^11.4.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^5.4.20",
        "vitest": "^1.0.0"
    }
}
