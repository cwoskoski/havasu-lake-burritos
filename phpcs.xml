<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         name="Havasu Lake Burritos Coding Standard"
         xsi:noNamespaceSchemaLocation="./vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <description>Custom PHP_CodeSniffer configuration for Havasu Lake Burritos project</description>

    <!-- Include Laravel Pint rules (PSR-12 based) -->
    <rule ref="PSR12"/>

    <!-- Files to check -->
    <file>app/</file>
    <file>config/</file>
    <file>database/</file>
    <file>routes/</file>
    <file>tests/</file>

    <!-- Exclude patterns -->
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>

    <!-- Show progress -->
    <arg name="report" value="full"/>
    <arg name="colors"/>
    <arg value="p"/>

    <!-- Additional rules for mobile-first development -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>

    <!-- Encourage proper documentation for burrito business logic -->
    <rule ref="Squiz.Commenting.ClassComment"/>
    <rule ref="Squiz.Commenting.FunctionComment"/>

    <!-- Variable naming for mobile UX components -->
    <rule ref="Squiz.NamingConventions.ValidVariableName"/>

</ruleset>