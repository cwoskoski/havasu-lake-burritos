APP_NAME="Havasu Lake Burritos"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=havasu_lake_burritos
DB_USERNAME=sail
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_MAILER=smtp
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Laravel Sail / Docker Configuration
WWWGROUP=1000
WWWUSER=1000
SUPERVISOR_PHP_USER=sail

# Docker port forwarding (to avoid conflicts)
APP_PORT=80
VITE_PORT=5173
FORWARD_DB_PORT=3306
FORWARD_REDIS_PORT=6379
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

# MySQL Configuration
MYSQL_EXTRA_OPTIONS=""

# Feature Flags Configuration
# Core Features
FEATURE_PHONE_AUTH=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_GUEST_CHECKOUT=false
FEATURE_USER_PROFILES=true

# Burrito Builder Features
FEATURE_BURRITO_BUILDER_V2=false
FEATURE_INGREDIENT_TRACKING=true
FEATURE_PORTION_CALCULATOR=false
FEATURE_NUTRITIONAL_INFO=false
FEATURE_ALLERGEN_WARNINGS=false

# Ordering Features
FEATURE_REAL_TIME_INVENTORY=false
FEATURE_ORDER_SCHEDULING=false
FEATURE_PRODUCTION_LIMITS=true
FEATURE_WEEKEND_ONLY_ORDERS=true

# Payment Features
FEATURE_NEW_PAYMENT_FLOW=false
FEATURE_STRIPE_INTEGRATION=false
FEATURE_CASH_ON_PICKUP=true
FEATURE_PAYMENT_SPLITTING=false

# Administrative Features
FEATURE_ADMIN_DASHBOARD=false
FEATURE_INGREDIENT_MANAGEMENT=false
FEATURE_ANALYTICS_DASHBOARD=false
FEATURE_CUSTOMER_MANAGEMENT=false

# Mobile App Features
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_OFFLINE_MODE=false
FEATURE_LOCATION_SERVICES=false
FEATURE_CAMERA_INTEGRATION=false

# Complex Feature Configurations
# Payment Methods
FEATURE_PAYMENT_METHODS_ENABLED=true
FEATURE_PAYMENT_STRIPE=false
FEATURE_PAYMENT_CASH=true
FEATURE_PAYMENT_APPLE_PAY=false
FEATURE_PAYMENT_GOOGLE_PAY=false

# Production Schedule
FEATURE_PRODUCTION_SCHEDULE_ENABLED=true
FEATURE_SATURDAY_CAPACITY=50
FEATURE_SUNDAY_CAPACITY=50
FEATURE_ADVANCE_ORDER_DAYS=7

# SMS Settings
FEATURE_SMS_ENABLED=true
FEATURE_SMS_VERIFICATION_REQUIRED=true
FEATURE_SMS_ORDER_CONFIRMATIONS=true
FEATURE_SMS_PICKUP_REMINDERS=true
FEATURE_SMS_MARKETING=false

# Environment-Based Feature Modes
FEATURE_DEVELOPMENT_MODE=false
FEATURE_STAGING_MODE=false
FEATURE_BETA_MODE=false
