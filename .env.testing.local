# Local testing environment overrides
# Copy this file to .env.testing.local for local customizations

# Use MySQL for integration tests if needed
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=havasu_testing

# Enable more verbose logging during development
LOG_LEVEL=info

# Test data settings
BURRITO_PRICE=1200
MAX_DAILY_BURRITOS=100

# Performance testing settings
MAX_RESPONSE_TIME_MS=150
MAX_MOBILE_RESPONSE_TIME_MS=250
MAX_DATABASE_QUERIES=8
MAX_MEMORY_USAGE_MB=4

# Feature flags for testing different scenarios
FEATURE_REAL_TIME_COUNTDOWN=true
FEATURE_INGREDIENT_AVAILABILITY=true
FEATURE_MOBILE_OPTIMIZATION=true
FEATURE_OFFLINE_SUPPORT=false
FEATURE_PREMIUM_INGREDIENTS=true

# Test user credentials
TEST_USER_EMAIL=test@havasu-burritos.local
TEST_USER_PASSWORD=password123
TEST_ADMIN_EMAIL=admin@havasu-burritos.local

# Twilio test settings
TWILIO_TEST_MODE=true
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_FROM_NUMBER=+15551234567

# Browser testing settings (for Dusk)
DUSK_DRIVER_URL=http://selenium:4444/wd/hub
APP_URL_DUSK=http://nginx:80

# Parallel testing settings
PARALLEL_PROCESSES=4
TEST_DB_PREFIX=test_

# Coverage settings
COVERAGE_MIN_PERCENTAGE=80
COVERAGE_OUTPUT_HTML=true
COVERAGE_OUTPUT_XML=true

# PHPStan settings
PHPSTAN_LEVEL=9
PHPSTAN_MEMORY_LIMIT=512M